<%- include("partials/header") -%>

<nav class="navbar navbar-expand-sm">
  <div class="container-fluid">
    <div class="navbar-header">
      <p class="navbar-brand">DAILY BLOG</p>
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <!-- 6 -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <ul class="navbar-nav fw-bold ms-auto">
        <li class="nav-item p-2" id="home">
          <a class="nav-link" href="/">HOME</a>
        </li>
        <li class="nav-item p-2" id="auth">
          <a class="nav-link" href="/register">SIGN UP</a>
        </li>
        <li class="nav-item p-2" id="about">
          <a class="nav-link" href="/about">ABOUT US</a>
        </li>
        <li class="nav-item p-2" id="composeBlog">
          <a class="nav-link" href="/compose">COMPOSE BLOG</a>
        </li>
        <li class="nav-item p-2" id="contact">
          <a class="nav-link" href="/contact">CONTACT US</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="big-img">
  <img class="img-fluid" src="/img/contact.jpg" alt="contactImg">
</div>

<div class="content-on-image">
  <h1>Get in touch !</h1>
  <p><%= contactContent %></p>
</div>

<div class="container-fluid text-center p-5 " id="post">
  <form method="post" action="/contact">
    <div className=' col d-flex justify-content-center m-5'>

      <div class="card p-2 w-30 bg-dark">
        <div class="card p-5 w-30">
          <h1 class="h3 mb-3 ">Subsctribe to our Blog!</h1>
          <div class="mb-3">
            <input type="text" name="firstname" class="p-2 col-sm-3" placeholder="First name" required autofocus>
          </div>
          <div class="mb-3">
            <input type="text" name="lastname" class="p-2 col-sm-3" placeholder="Last name" required>
          </div>
          <div class="mb-3">
            <input type="email" name="email" class="p-2 col-sm-3" placeholder="Email" required>
          </div>
          <div class="mb-3">
            <button class="p-3 mt-2 col-sm-3 btn btn-dark btn-lg" type="submit">Sign up</button>
          </div>
        </div>
      </div>

    </div>
  </form>
</div>

<%- include("partials/footer") -%>
