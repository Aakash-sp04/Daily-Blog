<%- include("partials/header") -%>

<div class="big-img">
  <img class="img-fluid" src="/img/contact.jpg" alt="contactImg">
</div>

<div class="content-on-image">
  <h1>Get in touch !</h1>
  <p><%= contactContent %></p>
</div>

<div class="container-fluid text-center p-5 " id="post">
  <form method="post" action="/contact">
    <div className=' col d-flex justify-content-center m-5'>

      <div class="card p-2 w-30 bg-dark">
        <div class="card p-5 w-30">
          <h1 class="h3 mb-3 ">Subsctribe to our Blog!</h1>
          <div class="mb-3">
            <input type="text" name="firstname" class="p-2 col-sm-3" placeholder="First name" required autofocus>
          </div>
          <div class="mb-3">
            <input type="text" name="lastname" class="p-2 col-sm-3" placeholder="Last name" required>
          </div>
          <div class="mb-3">
            <input type="email" name="email" class="p-2 col-sm-3" placeholder="Email" required>
          </div>
          <div class="mb-3">
            <button class="p-3 mt-2 col-sm-3 btn btn-dark btn-lg" type="submit">Sign up</button>
          </div>
        </div>
      </div>

    </div>
  </form>
</div>

<%- include("partials/footer") -%>
